# Example configuration file for Deribit testing
# Copy this to .env and update with your actual values

# Deribit API credentials (optional - for authenticated tests)
# Get these from your Deribit account under API section
DERIBIT_CLIENT_ID=your_client_id_here
DERIBIT_CLIENT_SECRET=your_client_secret_here

# Deribit API endpoints
# Use test.deribit.com for testing, www.deribit.com for production
DERIBIT_BASE_URL=https://test.deribit.com
DERIBIT_WS_URL=wss://test.deribit.com/ws/api/v2

# Your server configuration (if testing your own server)
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_BASE_URL=http://localhost:8080

# Test configuration settings
TEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_SECOND=20

# Additional configuration options
LOG_LEVEL=INFO
ENABLE_SSL_VERIFICATION=true
RETRY_ATTEMPTS=3
RETRY_DELAY=1
